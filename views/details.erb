<h4>Post details:</h4>
    </br>
<p>
	    <%= @row['autor_name'] %>
	</br>
	</br>    
		<%= @row['content'] %>
	</br>
    </br>
		<span style="font-size:75%;color:#999"> Added at: <%=@row['created_date'] %>
	</br>
</p>
	<br/>
<h4>Comments:</h4>
<br/>
<p>
<% @comments.each do |comment| %>
<p>
		<%= comment['content'] %>
		<br/>
		<span style="font-size:75%;color:#999">Added at: <%=comment['created_date'] %>
</p>
<hr/>
<% end %>

<form action="/details/<%= @row['id'] %>" method="POST" role="form">
  <div class="form-group">
       <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="6" placeholder="type your message here"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>